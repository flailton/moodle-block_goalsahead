{{!
    @template block_goalsahead/dashboard
    Resource selector results.
    Example context (json):
    {}
}}

<tr>
    <td style="width: 5%;">
        {{#has_associate_data}}
        <a id="view_detail_{{id}}" class="view-detail" href="javascript:void(0);" data-target="#details_{{id}}" data-toggle="collapse" class="accordion-toggle" style="font-size: 20px; color: Gray;">
            <i class="fa fa-plus-circle"></i>
        </a>
        {{/has_associate_data}}
    </td>
    <td style="text-align:left">
        <div class="resource-name">
            {{title}}
        </div>
    </td>
    <td style="width: 25%;">
        <div>
            <div class="progress" style="border-radius: 4px; height: 1.52rem !important; background-color: #bfbfbf !important;" title="{{progress}}%">
                <div class="progress-bar" role="progressbar" style="width: {{progress}}%;background-color:#00a505ab !important;" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100">
                    {{progress}}%
                </div>
            </div>
        </div>
    </td>
    <td style="width: 5%;">
        {{^complete}}
            <a href="javascript:void(0);" style="font-size: 20px; color: Gray;" class="btn-action" route="action" data-action="complete" data-page="objectives" data-id="{{id}}">
                <i class="fa fa-check-square"></i>
            </a>
        {{/complete}}
        <a href="javascript:void(0);" style="font-size: 20px; color: Gray;" class="btn-form" route="form" data-page="objectives" data-id="{{id}}">
            <i class="fa fa-edit"></i>
        </a>
        <a href="javascript:void(0);" style="font-size: 20px; color: Gray;" class="btn-action" route="action" data-action="delete" data-page="objectives" data-id="{{id}}">
            <i class="fa fa-trash"></i>
        </a>
    </td>
</tr>
{{#has_associate_data}}
<tr>
    <td colspan="4" style="padding: 0 !important;">
        <div class="accordian-body collapse" id="details_{{id}}" style="width:95%; margin: 0 2.5%;">
                <table
                class="table table-borderless"
                style="width: 100%; margin: 0;">
                <tbody>
                    {{#associate_data}}
                        {{#is_objective}}
                            {{> block_goalsahead/dashboard_line_objective }}
                        {{/is_objective}}
                        {{#is_goal}}
                            {{> block_goalsahead/dashboard_line_goal }}
                        {{/is_goal}}
                    {{/associate_data}}
                </tbody>
            </table>
        </div> 
    </td>
</tr>
{{/has_associate_data}}