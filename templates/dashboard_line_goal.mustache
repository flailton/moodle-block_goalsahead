{{!
    @template block_goalsahead/dashboard
    Resource selector results.
    Example context (json):
    {}
}}

<tr>
    <td style="width: 5%;">
        {{#complete}}
            <span style="font-size: 20px; color: #00a505ab;">
                <i class="fa fa-check"></i>
            </span>
        {{/complete}}
    </td>
    <td style="text-align:left">
        {{title}}
    </td>
    <td style="width: 25%;">
        <div class="progress" style="border-radius: 4px; height: 1.52rem !important; background-color: #bfbfbf !important;" title="{{progress}}%">
            <div class="progress-bar" role="progressbar" style="width: {{progress}}%;background-color:#00a505ab !important;" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100">
                {{progress}}%
            </div>
        </div>
    </td>
    <td style="width: 10%;">
        {{^complete}}
            <a href="javascript:void(0);" title="{{str.completegoal}}" style="font-size: 20px; color: Gray;" class="btn-action" route="action" data-action="complete" data-page="goals" data-id="{{id}}">
                <i class="fa fa-check-square"></i>
            </a>
        {{/complete}}
        <a href="javascript:void(0);" title="{{str.editgoal}}" style="font-size: 20px; color: Gray;" class="btn-form" route="form" data-page="goals" data-id="{{id}}">
            <i class="fa fa-edit"></i>
        </a>
        {{#progressenable}}
            <a href="javascript:void(0);" title="{{str.progresstrackgoal}}" style="font-size: 20px; color: Gray;" class="btn-form" route="form" data-page="goalprogress" data-goalid="{{id}}">
                <i class="fa fa-tasks"></i>
            </a>
        {{/progressenable}}
        <a href="javascript:void(0);" title="{{str.deletegoal}}" style="font-size: 20px; color: Gray;" class="btn-action" route="action" data-action="delete" data-page="goals" data-id="{{id}}">
            <i class="fa fa-trash"></i>
        </a>
    </td>
</tr>